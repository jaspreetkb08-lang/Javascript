    <input type="text" id="display" readonly>

    <div class="buttons">
        <!-- Row 1 -->
        <button class="clear">C</button>
        <button>⌫</button>
        <button>.</button>
        <button class="op">÷</button>

        <!-- Row 2 -->
        <button>7</button>
        <button>8</button>
        <button>9</button>
        <button class="op">×</button>

        <!-- Row 3 -->
        <button>4</button>
        <button>5</button>
        <button>6</button>
        <button class="op">-</button>

        <!-- Row 4 -->
        <button>1</button>
        <button>2</button>
        <button>3</button>
        <button class="op">+</button>

        <!-- Row 5 -->
        <button class="zero">0</button>
        <button>00</button>
        <button class="equal">=</button>
    </div>
</div>

<script>
let display = document.getElementById("display");
let first = "";
let operator = "";
let second = "";

document.querySelectorAll("button").forEach(btn=>{
    btn.onclick = ()=>{
        let val = btn.innerText;

        // Clear all
        if(val === "C"){
            display.value = "";
            first = operator = second = "";
        }

        // Backspace (cancel one digit)
        else if(val === "⌫"){
            display.value = display.value.slice(0, -1);
            second = display.value;
        }

        // Equals
        else if(val === "="){
            if(first && operator && second){
                display.value = eval(first + operator + second);
                first = display.value;
                operator = second = "";
            }
        }

        // Operators
        else if("+-×÷".includes(val)){
            operator = val === "×" ? "*" : val === "÷" ? "/" : val;
            first = display.value;
            display.value = "";
        }

        // Numbers / dot / 00
        else{
            display.value += val;
            second = display.value;
        }
    }
});
</script>

</body>
